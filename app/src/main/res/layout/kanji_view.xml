<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/kanji_mll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jlpt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jlpt"
                android:textSize="@dimen/ktitletextsize" />

            <TextView
                android:id="@+id/jlpt_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/kinfotextsize" />

            <TextView
                android:id="@+id/grade_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade"
                android:textSize="@dimen/ktitletextsize" />

            <TextView
                android:id="@+id/grade_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/kinfotextsize" />

            <TextView
                android:id="@+id/stroke_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stroke_count"
                android:textSize="@dimen/ktitletextsize" />

            <TextView
                android:id="@+id/stroke_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/kinfotextsize" />

            <TextView
                android:id="@+id/freq_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/freq"
                android:textSize="@dimen/ktitletextsize" />

            <TextView
                android:id="@+id/freq_ph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/kinfotextsize" />
        </LinearLayout>

        <TextView
            android:id="@+id/kanji_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="144sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/meaning_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meaning_title"
        android:textSize="@dimen/ktitletextsize" />

    <TextView
        android:id="@+id/meaning_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kinfotextsize" />

    <TextView
        android:id="@+id/kunyomi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kunyomi"
        android:textSize="@dimen/ktitletextsize" />

    <TextView
        android:id="@+id/kunyomi_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kinfotextsize" />

    <TextView
        android:id="@+id/onyomi_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/onyomi"
        android:textSize="@dimen/ktitletextsize" />

    <TextView
        android:id="@+id/onyomi_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kinfotextsize" />

    <TextView
        android:id="@+id/nanori_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nanori"
        android:textSize="@dimen/ktitletextsize" />

    <TextView
        android:id="@+id/nanori_ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/kinfotextsize" />

</LinearLayout>